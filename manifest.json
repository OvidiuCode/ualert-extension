{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "1.0",
  "default_locale": "pt",

  "content_scripts": [
    {
      "matches": ["https://example.com/*"],
      "js": [
        "src/vendor/jquery.min.js",
        "src/main.js"
      ],
      "run_at": "document_end"
    }
  ],

  "options_ui": {
    "page": "src/options.html",
    "chrome_style": true
  },

  "icons": {
    "128": "src/icons/icon.png"
  },

  "browser_action": {
    "default_icon": "src/icons/icon.png",
    "default_title": "Chrome Extension Boilerplate",
    "default_popup": "src/popup.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
